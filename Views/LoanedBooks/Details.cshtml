@model Collection.Models.LoanedBooks

@{
    ViewData["Title"] = "Details";
}

<h1>Information</h1>

<div>
    <h4>Lån av bok</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoanDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoanDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name) <!-- Använd User.Name för att visa användarens namn -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title) <!-- Använd Book.Title för att visa bokens titel -->
        </dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed" asp-route-id="@Model.ID" method="post">
    <input type="hidden" name="_method" value="DELETE" />
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>
